    --color-text-faded: rgba(161, 165, 183, 1);

    --color-bg: rgba(249, 250, 253, 1);
    --color-bg-lighter: rgba(255, 255, 255, 1);
    --color-dark-bg: rgba(24, 28, 50, 1);
    --color-dark-bg-lighter: rgba(30, 33, 52, 1);

