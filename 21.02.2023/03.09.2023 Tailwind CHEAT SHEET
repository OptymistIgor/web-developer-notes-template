Use classNameFactory special for style

export const displayHeading = ({
    faded = false,
    level = 2,
}: {
    faded?: boolean
    level?: 1 | 2
}) => {
    const defaults = 'font-heading font-bold text-3xl lg:text-5xl'
    if (level === 1 && !faded)
        return 'font-heading font-bold text-4xl lg:text-7xl'
    if (level === 1 && faded)
        return 'font-heading font-bold text-3xl lg:text-6xl opacity-60'
    if (level === 2 && !faded) return defaults
    if (level === 2 && faded)
        return 'font-heading font-bold text-2xl lg:text-4xl opacity-60'
    return defaults
}

export const displayReading = ({
    faded,
    sm,
}: {
    faded?: boolean
    sm?: boolean
}) => {
    if (sm && faded) return 'font-body text-lg lg:text-2xl opacity-60'
    if (faded) return 'font-body text-xl lg:text-3xl opacity-60'
    if (sm) return 'font-body text-xl lg:text-3xl'
    return 'font-body text-2xl lg:text-4xl'
}

export const commonHeading = ({
    level = 2,
    faded,
}: {
    faded?: boolean
    level?: 1 | 2
}) => {
    const defaults = 'font-heading font-bold text-base lg:text-xl'
    if (level === 1 && !faded)
        return 'font-heading font-bold text-lg lg:text-2xl'
    if (level === 1 && faded)
        return 'font-heading font-bold text-base lg:text-xl opacity-60'
    if (level === 2 && !faded) return defaults
    if (level === 2 && faded)
        return 'font-heading font-bold text-sm lg:text-lg opacity-60'
    return defaults
}

export const commonReading = ({
    sm,
    faded,
}: {
    faded?: boolean
    sm?: boolean
}) => {
    if (sm && faded) return 'font-body text-xxs lg:text-xs opacity-60'
    if (faded) return 'font-body text-xs lg:text-sm opacity-60'
    if (sm) return 'font-body text-xs lg:text-sm'
    return 'font-body text-sm lg:text-base'
}

export const contentHeading = ({
    level,
    faded,
}: {
    level?: 1 | 2
    faded?: boolean
}) => {
    const defaults = 'font-heading font-bold text-lg lg:text-3xl'
    if (level === 1 && !faded)
        return 'font-heading font-bold text-2xl lg:text-4xl'
    if (level === 1 && faded)
        return 'font-heading font-bold text-xl lg:text-3xl opacity-60'
    if (level === 2 && !faded) return defaults
    if (level === 2 && faded)
        return 'font-heading font-bold text-base lg:text-2xl opacity-60'
    return defaults
}

export const contentReading = ({
    leading,
    faded,
    sm,
}: {
    leading?: boolean
    faded?: boolean
    sm?: boolean
}) => {
    const defaults = 'font-body text-base lg:text-xl'
    if (leading && faded) return 'font-body text-lg lg:text-xl opacity-60'
    if (leading) return 'font-body text-xl lg:text-2xl'
    if (faded && sm) return 'font-body text-xs lg:text-base'
    if (faded) return 'font-body text-sm lg:text-lg opacity-60'
    if (sm) return 'font-body text-sm lg:text-lg'
    return defaults
}

export const system = ({ faded }: { faded?: boolean }) => {
    if (faded) return 'font-body text-lxs lg:text-xxs opacity-60'
    return 'font-body text-xxs lg:text-xs'
}

export const small = ({ faded }: { faded?: boolean }) => {
    if (faded) return 'font-body text-lxs opacity-60'
    return 'font-body text-xxs'
}


Use global CSS 

@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
    /* COLORS: custom */
    --color-primary: rgba(24, 28, 50, 1);
    --color-success: rgba(74, 181, 142, 1);
    --color-error: rgba(229, 56, 85, 1);

    --color-text: rgba(51, 51, 51, 1);
    --color-text-light: rgba(94, 98, 120, 1);
